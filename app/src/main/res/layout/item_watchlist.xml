<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/searchItemImage"
        android:layout_width="95dp"
        android:layout_height="120dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/rounded_background"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/searchItemTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:text="Spider man"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/searchItemImage"
        app:layout_constraintTop_toTopOf="@+id/searchItemImage" />


    <LinearLayout
        android:id="@+id/searchItemDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/searchItemImage"
        app:layout_constraintStart_toEndOf="@+id/searchItemImage"
        app:layout_constraintTop_toBottomOf="@+id/searchItemTitle"
        app:layout_constraintVertical_bias="1">

        <TextView
            android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#FF8700"
            android:drawableLeft="@drawable/calender"
            android:text="2021"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/clock"
            android:text="148 minutos"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/movie_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/outline_airplane_ticket_24"
            android:text="Secret"
            android:textAlignment="center" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>